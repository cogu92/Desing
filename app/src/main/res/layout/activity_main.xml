<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.desing.MainActivity"
    android:background="@android:color/white"
    tools:layout_width="match_parent">


    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/linear_layout_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/grid_contetn_head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222299"
            android:id="@+id/scrol_content_data">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/vetical_content_data_layout">

                <TextView
                    android:text="Passport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_pasport"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:allowUndo="true" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="320dp"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/content_data">

                    <EditText
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="Surname"
                        android:ems="10"
                        android:id="@+id/editText2"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:text="Surename"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_surename"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:text="Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_name"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="Name"
                        android:ems="10"
                        android:id="@+id/editText"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="10sp"
                        android:textColorLink="@android:color/holo_blue_light" />

                    <EditText
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="Nstionality"
                        android:ems="10"
                        android:id="@+id/txt_nationaliti"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:background="#ffffff"/>
                    <CheckBox
                        android:text="Col Citizen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chk_citizen"    android:layout_row="2"
                        android:layout_column="1"
                        android:textColor="@android:color/white" />

                </GridLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:background="#222299"
        android:layout_height="wrap_content"
android:columnCount="3"
        android:id="@+id/grid_contetn_head"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="127dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_profile"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="127dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_profile_front"
            android:layout_row="0"
            android:layout_column="1" />
    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linear_back_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                 android:background="@drawable/fondo"
             android:layoutDirection="rtl"
            android:id="@+id/content_img">

            <ImageView
                android:layout_width="67dp"
                android:layout_height="48dp"
                app:srcCompat="@android:drawable/star_big_off"
                android:id="@+id/img_start"
                android:layout_weight="1.56"
                android:background="?attr/colorPrimary"
                android:textAlignment="center"
                android:textDirection="firstStrongRtl"
                android:layout_margin="15dp" />
        </FrameLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:columnCount="3"
            android:layout_below="@+id/linear_layout_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_blue_bright">

            <Button
                android:text="CANCEL"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cancel"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="@color/colorAccent" />

            <Button
                android:text="ACCEPR"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_accept"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="APPLY"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_apply"
                android:textColor="@android:color/holo_green_light" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
               >

            </LinearLayout>
        </GridLayout>
    </LinearLayout>


</RelativeLayout>
